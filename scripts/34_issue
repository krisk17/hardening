function f_issue {
  echo "[$SCRIPT_COUNT] /etc/issue"

  local TEXT

  for f in /etc/issue /etc/issue.net /etc/motd; do
    TEXT="\\nAuthorized users only. All activity may be monitored and reported.\\n"
    echo -e "$TEXT" > $f
  done
  
  cp "./misc/issue.net" /etc/issue.net

  ((SCRIPT_COUNT++))
}
